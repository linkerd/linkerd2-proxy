{
	"name": "linkerd2-proxy",
	"context": "${localWorkspaceFolder}",
	"image": "ghcr.io/linkerd/dev-proxy:v1",
	// "dockerFile": "./Dockerfile",
	// "build": {
	// 	"args": {
	// 		"USER": "code",
	// 		//"USER_UID": "${localEnv:UID}",
	// 		//"USER_GID": "${localEnv:GID}"
	// 	},
	// },
	"settings": {},
	"extensions": [
		"DavidAnson.vscode-markdownlint",
		"matklad.rust-analyzer",
		"NathanRidley.autotrim",
		"samverschueren.final-newline",
		"streetsidesoftware.code-spell-checker",
		"tamasfe.even-better-toml",
		"vadimcn.vscode-lldb",
		"zxh404.vscode-proto3"
	],
	"forwardPorts": [],
	// Support docker + debugger
	"runArgs": [
		"--init",
		"--cap-add=SYS_PTRACE",
		"--privileged",
		"--security-opt",
		"seccomp=unconfined"
	],
	"overrideCommand": false,
	"remoteUser": "code",
	"mounts": [
		// Retain containers across rebuilds
		"source=l2-proxy-dind,target=/var/lib/docker,type=volume"
	]
}
